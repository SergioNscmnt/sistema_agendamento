<h4>Minhas Configurações</h4>
<div class="container-fluid my-5">
  <div style="max-width: 720px; width: 100%; margin-left: 0;">
  <div class="card shadow-sm border-0" style="border-radius: 1rem;">
    <div class="card-header <% card_headers %> d-flex align-items-center">
      <i class="bi bi-gear-fill me-2"></i>
      <h5 class="mb-0">Perfil de <%= @usuario.nome %>
      </h5>
    </div>

    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-3 text-center">
          <% if @usuario.avatar.attached? %>
            <%= image_tag( @usuario.avatar .variant(resize_to_fill: [150, 150]) .processed,
              class: "rounded-circle border border-3 border-primary mb-2" , alt: "Avatar de #{@usuario.nome}" , width:
              150, height: 150, style: "object-fit: cover;" ) %>
              <% else %>
                <i class="bi bi-person-circle display-1 text-secondary"></i>
                <% end %>
        </div>
        <div class="col-md-9">
          <ul class="list-group list-group-flush">
            <li class="<% list_item_class %> mt-2 d-flex">
              <strong class="me-2 text-muted">Nome:</strong>
              <span>
                <%= @usuario.nome %>
              </span>
            </li>
            <li class="<% list_item_class %> mt-2 d-flex">
              <strong class="me-2 text-muted">E-mail:</strong>
              <span>
                <%= @usuario.email %>
              </span>
            </li>
            <li class="<% list_item_class %> mt-2 d-flex no-copy" oncopy="return false" oncut="return false"
              oncontextmenu="return false">
              <strong class="me-2 text-muted">Senha:</strong>
              <span>••••••••</span>
            </li>
            <li class="<% list_item_class %>  mt-2 d-flex">
              <strong class="me-2 text-muted">Membro desde:</strong>
              <span>
                <%= format_date(@usuario.created_at) %>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="card-footer <% card_footer %> text-end">
      <div class="row">
        <!-- Botão Voltar -->
        <div class="col-auto me-auto">
          <%= link_to root_path, class: "btn btn-light" do %>
            <i class="bi bi-arrow-left me-1"></i> Voltar
            <% end %>
        </div>

        <!-- Botão Editar -->
        <div class="col-auto text-end">
          <%= link_to edit_configuracoes_path, class: "btn btn-primary" do %>
            <i class="bi bi-pencil-fill me-1"></i> Editar
            <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>